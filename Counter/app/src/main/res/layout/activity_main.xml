<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_click"
        android:layout_width="145dp"
        android:layout_height="95dp"
        android:layout_marginBottom="208dp"
        android:background="@color/white"
        android:backgroundTint="@color/design_default_color_secondary_variant"
        android:text="Click"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_count"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/txt_count" />

    <TextView
        android:id="@+id/txt_count"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:textColor="@color/design_default_color_error"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_click"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.884" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="220dp"
        android:layout_height="52dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="-Counter-"
        android:textColor="@color/design_default_color_error"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_count"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.844" />

    <Button
        android:id="@+id/btn_azalt"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="-1"
        android:textSize="20sp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_click"
        app:layout_constraintVertical_bias="0.866" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="@android:drawable/btn_dialog"
        android:text="Reset"
        android:textColor="@color/design_default_color_error"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.926"
        app:layout_constraintStart_toEndOf="@+id/btn_azalt"
        app:layout_constraintTop_toBottomOf="@+id/btn_click"
        app:layout_constraintVertical_bias="0.792" />
</androidx.constraintlayout.widget.ConstraintLayout>